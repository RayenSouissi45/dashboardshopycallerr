{
  "eslint.workingDirectories": ["./packages/sasley-mobile"],
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "search.exclude": {
    "yarn.lock": true
  },
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": false,
  "typescript.tsdk": "packages/sasley-mobile/node_modules/typescript/lib",
  "eslint.format.enable": true,
  "[javascript][typescript][typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.codeActionsOnSave": [
      "source.addMissingImports",
      "source.fixAll.eslint"
    ]
  },
  "[json][jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.words": ["Flashlist", "Lato"],
  "i18n-ally.localesPaths": ["packages/sasley-mobile/src/translations/"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.disabled": false,
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  } // make sure to disable i18n-ally in your global setting and only enable it for such projects
}
